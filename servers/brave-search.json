{
  "id": "com.brave.search",
  "name": "Brave Search",
  "alias": "brave",
  "description": "Perform web searches and local business lookups using the Brave Search API. Provides access to web search results, news, and local points of interest with privacy-respecting search technology.",
  "icon": "ü¶Å",
  "schema_version": "2.1",
  "transport": {
    "type": "stdio",
    "command": "npx",
    "args": [
      "-y",
      "@modelcontextprotocol/server-brave-search"
    ],
    "env": {
      "BRAVE_API_KEY": "${BRAVE_API_KEY}"
    },
    "metadata": {
      "inputs": [
        {
          "id": "BRAVE_API_KEY",
          "label": "Brave Search API Key",
          "type": "password",
          "required": true,
          "secret": true,
          "description": "API key for the Brave Search API. A free tier is available with up to 2,000 queries per month.",
          "placeholder": "BSA_xxxxxxxxxxxxxxxxxxxx",
          "obtain": {
            "url": "https://brave.com/search/api/",
            "instructions": "Visit the Brave Search API page, sign up for a free or paid plan, and copy your API key from the dashboard.",
            "button_label": "Get Brave API Key"
          }
        }
      ]
    }
  },
  "auth": {
    "type": "api_key",
    "instructions": "Requires a Brave Search API key. Sign up at https://brave.com/search/api/ to obtain one. A free tier with 2,000 queries/month is available."
  },
  "categories": [
    "search"
  ],
  "tags": [
    "search",
    "web-search",
    "brave",
    "local-search",
    "news",
    "privacy",
    "api"
  ],
  "publisher": {
    "name": "Anthropic",
    "domain": "anthropic.com",
    "url": "https://anthropic.com",
    "verified": true,
    "domain_verified": true,
    "official": true
  },
  "links": {
    "repository": "https://github.com/modelcontextprotocol/servers/tree/main/src/brave-search",
    "homepage": "https://brave.com/search/api/",
    "documentation": "https://github.com/modelcontextprotocol/servers/blob/main/src/brave-search/README.md"
  },
  "platforms": [
    "all"
  ],
  "capabilities": {
    "tools": true,
    "resources": false,
    "prompts": false,
    "read_only_mode": true
  },
  "badges": [
    "official"
  ],
  "hosting_type": "local",
  "license": "MIT",
  "license_url": "https://github.com/modelcontextprotocol/servers/blob/main/LICENSE",
  "installation": {
    "difficulty": "easy",
    "prerequisites": [
      "Node.js 18+"
    ],
    "estimated_time": "5 minutes"
  }
}
