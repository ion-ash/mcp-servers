{
  "id": "com.anthropic.sentry",
  "name": "Sentry",
  "alias": "sentry",
  "description": "Integrate with Sentry for error tracking and performance monitoring. Retrieve and analyze error reports, explore issues, view stack traces, and monitor application health through Sentry's platform.",
  "icon": "ðŸ”",
  "schema_version": "2.1",
  "transport": {
    "type": "stdio",
    "command": "npx",
    "args": [
      "-y",
      "@modelcontextprotocol/server-sentry"
    ],
    "env": {
      "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}"
    },
    "metadata": {
      "inputs": [
        {
          "id": "SENTRY_AUTH_TOKEN",
          "label": "Sentry Auth Token",
          "type": "password",
          "required": true,
          "secret": true,
          "description": "Sentry authentication token with read access to projects, issues, and events. Create one in Sentry's settings under Auth Tokens.",
          "placeholder": "sntrys_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
          "obtain": {
            "url": "https://sentry.io/settings/auth-tokens/",
            "instructions": "Go to Sentry Settings > Auth Tokens > Create New Token. Grant the token read access to Organization, Project, Issue, and Event scopes.",
            "button_label": "Create Sentry Token"
          }
        }
      ]
    }
  },
  "auth": {
    "type": "api_key",
    "instructions": "Requires a Sentry Auth Token. Generate one at https://sentry.io/settings/auth-tokens/ with appropriate read scopes."
  },
  "categories": [
    "monitoring",
    "developer-tools"
  ],
  "tags": [
    "sentry",
    "error-tracking",
    "monitoring",
    "debugging",
    "performance",
    "observability",
    "issues"
  ],
  "publisher": {
    "name": "Anthropic",
    "domain": "anthropic.com",
    "url": "https://anthropic.com",
    "verified": true,
    "domain_verified": true,
    "official": true
  },
  "links": {
