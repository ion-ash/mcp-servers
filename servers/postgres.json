{
  "id": "com.anthropic.postgres",
  "name": "PostgreSQL",
  "alias": "pg",
  "description": "Connect to PostgreSQL databases to inspect schemas, run read-only SQL queries, and explore table structures. Ideal for data analysis, debugging, and database exploration without risk of modifying data.",
  "icon": "üêò",
  "schema_version": "2.1",
  "transport": {
    "type": "stdio",
    "command": "npx",
    "args": [
      "-y",
      "@modelcontextprotocol/server-postgres",
      "${POSTGRES_CONNECTION_STRING}"
    ],
    "metadata": {
      "inputs": [
        {
          "id": "POSTGRES_CONNECTION_STRING",
          "label": "PostgreSQL Connection String",
          "type": "password",
          "required": true,
          "secret": true,
          "description": "PostgreSQL connection URI in the format postgresql://user:password@host:port/database. This is passed as a command-line argument to the server.",
          "placeholder": "postgresql://user:password@localhost:5432/mydb",
          "obtain": {
            "url": "https://www.postgresql.org/docs/current/libpq-connect.html#LIBPQ-CONNSTRING",
            "instructions": "Construct a PostgreSQL connection string using your database credentials. Format: postgresql://username:password@hostname:port/database_name",
            "button_label": "Connection String Docs"
          }
        }
      ]
    }
  },
  "auth": {
    "type": "none",
    "instructions": "Authentication is handled via the PostgreSQL connection string passed as a command argument. No separate API key is required."
  },
