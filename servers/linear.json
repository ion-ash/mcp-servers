{
  "id": "community.linear",
  "name": "Linear",
  "alias": "linear",
  "description": "Integrate with Linear for project management and issue tracking. Create, update, and search issues, manage projects and cycles, track team workflows, and automate project management tasks.",
  "icon": "ðŸ“‹",
  "schema_version": "2.1",
  "transport": {
    "type": "stdio",
    "command": "npx",
    "args": [
      "-y",
      "mcp-linear"
    ],
    "env": {
      "LINEAR_API_KEY": "${LINEAR_API_KEY}"
    },
    "metadata": {
      "inputs": [
        {
          "id": "LINEAR_API_KEY",
          "label": "Linear API Key",
          "type": "password",
          "required": true,
          "secret": true,
          "description": "Linear personal API key for authenticating with the Linear GraphQL API. Grants access to your workspace data.",
          "placeholder": "lin_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
          "obtain": {
            "url": "https://linear.app/settings/api",
            "instructions": "Go to Linear Settings > API > Personal API keys. Click 'Create key', give it a label, and copy the generated key.",
            "button_label": "Create Linear API Key"
          }
        }
      ]
    }
  },
  "auth": {
    "type": "api_key",
    "instructions": "Requires a Linear personal API key. Generate one at https://linear.app/settings/api under Personal API keys."
  },
