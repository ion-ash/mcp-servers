{
  "id": "com.anthropic.filesystem",
  "name": "Filesystem",
  "alias": "fs",
  "description": "Provides secure access to the local file system with configurable allowed directories. Supports reading, writing, moving, and searching files with built-in safety controls to prevent access outside permitted paths.",
  "icon": "üìÅ",
  "schema_version": "2.1",
  "transport": {
    "type": "stdio",
    "command": "npx",
    "args": [
      "-y",
      "@modelcontextprotocol/server-filesystem",
      "${ALLOWED_DIRECTORIES}"
    ],
    "metadata": {
      "inputs": [
        {
          "id": "ALLOWED_DIRECTORIES",
          "label": "Allowed Directories",
          "type": "text",
          "required": true,
          "secret": false,
          "description": "Space-separated list of absolute directory paths that the server is allowed to access. The server will refuse to read or write files outside these directories.",
          "placeholder": "/home/user/projects /home/user/documents"
        }
      ]
    }
  },
  "auth": {
    "type": "none",
    "instructions": "No authentication required. Access is controlled by specifying allowed directories as command arguments."
  },
