{
  "id": "com.anthropic.github",
  "name": "GitHub",
  "alias": "gh",
  "description": "Interact with GitHub repositories, issues, pull requests, and more through the GitHub API. Supports repository management, file operations, branch management, issue tracking, and pull request workflows.",
  "icon": "ðŸ™",
  "schema_version": "2.1",
  "transport": {
    "type": "stdio",
    "command": "npx",
    "args": [
      "-y",
      "@modelcontextprotocol/server-github"
    ],
    "env": {
      "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
    },
    "metadata": {
      "inputs": [
        {
          "id": "GITHUB_PERSONAL_ACCESS_TOKEN",
          "label": "GitHub Personal Access Token",
          "type": "password",
          "required": true,
          "secret": true,
          "description": "A GitHub Personal Access Token with appropriate scopes for the operations you need (e.g., repo, read:org).",
          "placeholder": "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
          "obtain": {
            "url": "https://github.com/settings/tokens",
            "instructions": "Go to GitHub Settings > Developer settings > Personal access tokens > Tokens (classic). Click 'Generate new token', select required scopes (repo, read:org recommended), and copy the generated token.",
            "button_label": "Generate GitHub Token"
          }
        }
      ]
    }
  },
  "auth": {
    "type": "api_key",
    "instructions": "Requires a GitHub Personal Access Token. Generate one at https://github.com/settings/tokens with the necessary scopes for your use case."
  },
  "categories": [
    "developer-tools",
    "version-control"
  ],
