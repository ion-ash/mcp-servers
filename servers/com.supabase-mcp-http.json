  "icon": "https://avatars.githubusercontent.com/u/87650496?v=4",
  "schema_version": "2.1",
  "categories": ["database", "cloud"],
  "tags": ["supabase", "postgres", "database", "auth", "storage", "edge-functions", "remote"],

  "transport": {
    "type": "http",
    "url": "https://mcp.supabase.com/mcp",
    "metadata": {
      "inputs": []
