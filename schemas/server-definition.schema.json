{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mcpmux.com/schemas/server-definition.json",
  "title": "MCP Server Definition",
  "description": "Single server definition (Format B) for McpMux Registry",
  "type": "object",
  "required": ["id", "name", "transport"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9.-]+$",
      "description": "Unique identifier in reverse-domain notation (e.g., com.example.server)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable display name"
    },
    "alias": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Short alias for CLI usage"
    },
    "description": {
      "type": "string",
      "description": "Short description of what the server does"
    },
    "icon": {
      "type": "string",
      "description": "Emoji or URL to icon image"
    },
    "schema_version": {
      "type": "string",
      "description": "Schema version this definition conforms to"
    },
    "transport": {
      "$ref": "#/$defs/transport"
    },
    "auth": {
      "$ref": "#/$defs/auth"
    },
    "categories": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Array of category IDs"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Searchable tags"
    },
    "publisher": {
      "$ref": "#/$defs/publisher"
    },
    "links": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "format": "uri",
          "description": "Source code repository URL"
        },
        "homepage": {
          "type": "string",
          "format": "uri",
          "description": "Project homepage URL"
        },
        "documentation": {
          "type": "string",
          "format": "uri",
          "description": "Documentation URL"
        }
      }
    },
    "platforms": {
      "type": "array",
      "items": {
        "enum": ["all", "windows", "macos", "linux"]
      },
      "description": "Supported platforms"
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "tools": { "type": "boolean" },
        "resources": { "type": "boolean" },
        "prompts": { "type": "boolean" },
        "read_only_mode": {
          "type": "boolean",
          "default": false,
          "description": "Server supports read-only operation (no write/destructive actions)"
        }
      },
      "description": "MCP capabilities supported"
    },
    "badges": {
      "type": "array",
      "items": {
        "enum": ["official", "verified", "featured", "sponsored", "popular"]
      },
      "uniqueItems": true,
      "default": [],
      "description": "Visual badges displayed on server listing for trust and discovery"
    },
    "hosting_type": {
      "type": "string",
      "enum": ["local", "remote", "hybrid"],
      "default": "local",
      "description": "Where the server runs: local (user's machine), remote (cloud), or hybrid (both)"
    },
    "license": {
      "type": "string",
      "description": "SPDX license identifier (e.g., MIT, Apache-2.0, GPL-3.0)",
      "examples": ["MIT", "Apache-2.0", "GPL-3.0", "BSD-3-Clause"]
    },
    "license_url": {
      "type": "string",
      "format": "uri",
      "description": "URL to full license text"
    },
    "installation": {
      "type": "object",
      "properties": {
        "difficulty": {
          "type": "string",
          "enum": ["easy", "moderate", "advanced"],
          "default": "moderate",
          "description": "Installation complexity level"
        },
        "prerequisites": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "Required software/tools (e.g., 'Node.js 18+', 'Docker', 'Python 3.9+')"
        },
        "estimated_time": {
          "type": "string",
          "description": "Estimated installation time (e.g., '5 minutes', '10 minutes')",
          "examples": ["5 minutes", "10 minutes", "30 minutes"]
        }
      },
      "description": "Installation metadata to help users understand requirements"
    },
    "sponsored": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Whether this is a sponsored listing"
        },
        "sponsor_name": {
          "type": "string",
          "description": "Name of sponsoring company or individual"
        },
        "sponsor_url": {
          "type": "string",
          "format": "uri",
          "description": "Sponsor website URL"
        },
        "sponsor_logo": {
          "type": "string",
          "format": "uri",
          "description": "Sponsor logo image URL"
        },
        "campaign_id": {
          "type": "string",
          "description": "Internal campaign tracking ID"
        }
      },
      "description": "Sponsorship information for supported server listings"
    },
    "media": {
      "type": "object",
      "properties": {
        "screenshots": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          },
          "maxItems": 5,
          "default": [],
          "description": "Screenshot URLs for visual preview"
        },
        "demo_video": {
          "type": "string",
          "format": "uri",
          "description": "Demo video URL (YouTube, Vimeo, etc.)"
        },
        "banner": {
          "type": "string",
          "format": "uri",
          "description": "Banner image for featured display (recommended: 1200x400px)"
        }
      },
      "description": "Rich media content for better discovery and user experience"
    },
    "changelog_url": {
      "type": "string",
      "format": "uri",
      "description": "URL to changelog or release notes"
    }
  },
  "$defs": {
    "transport": {
      "type": "object",
      "required": ["type"],
      "oneOf": [
        {
          "properties": {
            "type": { "const": "stdio" },
            "command": {
              "type": "string",
              "minLength": 1,
              "description": "Command to execute"
            },
            "args": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Command arguments"
            },
            "env": {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "Environment variables"
            },
            "cwd": {
              "type": "string",
              "description": "Working directory for command execution"
            },
            "metadata": {
              "$ref": "#/$defs/metadata"
            }
          },
          "required": ["type", "command"],
          "additionalProperties": false
        },
        {
          "properties": {
            "type": { "const": "http" },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "HTTP endpoint URL (supports Streamable HTTP)"
            },
            "metadata": {
              "$ref": "#/$defs/metadata"
            }
          },
          "required": ["type", "url"],
          "additionalProperties": false
        }
      ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "inputs": {
          "type": "array",
          "items": { "$ref": "#/$defs/input" },
          "description": "User inputs required for this server"
        }
      }
    },
    "input": {
      "type": "object",
      "required": ["id", "label"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z0-9_]+$",
          "description": "Uppercase identifier (e.g., API_KEY)"
        },
        "label": {
          "type": "string",
          "description": "Human-readable label"
        },
        "type": {
          "enum": ["text", "password", "number", "boolean", "url"],
          "default": "text",
          "description": "Input field type"
        },
        "required": {
          "type": "boolean",
          "default": false,
          "description": "Whether this input is required"
        },
        "secret": {
          "type": "boolean",
          "default": false,
          "description": "Whether this input contains sensitive data"
        },
        "description": {
          "type": "string",
          "description": "Help text for this input"
        },
        "placeholder": {
          "type": "string",
          "description": "Placeholder text"
        },
        "obtain": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "uri",
              "description": "URL where user can obtain this value"
            },
            "instructions": {
              "type": "string",
              "description": "Step-by-step instructions"
            },
            "button_label": {
              "type": "string",
              "description": "Button label for obtain link"
            }
          },
          "description": "Instructions for obtaining this input value"
        }
      },
      "additionalProperties": false
    },
    "auth": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "enum": ["none", "api_key", "optional_api_key", "oauth", "basic"],
          "description": "Authentication type: none (no auth), api_key (required), optional_api_key (enhanced if provided), oauth, basic"
        },
        "instructions": {
          "type": "string",
          "description": "Human-readable authentication instructions"
        }
      }
    },
    "publisher": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Publisher display name"
        },
        "domain": {
          "type": "string",
          "format": "hostname",
          "description": "Publisher domain"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Publisher website"
        },
        "verified": {
          "type": "boolean",
          "default": false,
          "description": "Whether publisher is verified by McpMux (maintainer-only field)"
        },
        "domain_verified": {
          "type": "boolean",
          "default": false,
          "description": "Whether domain ownership is verified (maintainer-only field)"
        },
        "official": {
          "type": "boolean",
          "default": false,
          "description": "Whether this is an official server by the publisher (maintainer-only field â€” requires proof of authorization from trademark holder)"
        }
      }
    }
  }
}
